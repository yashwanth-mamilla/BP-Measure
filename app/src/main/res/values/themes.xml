<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BPMeasure" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="android:textColorPrimaryDisableOnly">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.BPMeasure.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BPMeasure.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BPMeasure.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>